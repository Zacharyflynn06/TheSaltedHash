<h1>Add Your Recipe Below!</h1>

<form action="/posts" method="POST" enctype="multipart/form-data">

    <div class="wrapper">

        <h4><label for="title">Title</label><br>
            <input class="small-form" type="text" name="post[title]"><br>

        <label for="description">Description</label> <br>
            <input class="large-form" name="post[content]" type="text"><br>
    </div>

    <div class="wrapper">        
        <table class="center">
            <h3>Ingredients</h3><br>
            <tr>
                <th></th>
                <th>Ingredient</th>
                <th>Amount</th>
                <th>Measurement</th>
            </tr>
            <tr>
                <td><label for="first-ingredient">First Ingredient</label></td>
                <td><input class="small-form" type="text" name="post[ingredients][][name]"></td>
                <td><input class="small-form" type="text" name="post[ingredients][][amount]"></td>
                <td><input class="small-form" type="text" name="post[ingredients][][measurement]"></td>
            </tr>
            <tr>
                <td><label for="second-ingredient">Second Ingredient</label></td>
                <td><input class="small-form" type="text" name="post[ingredients][][name]"></td>
                <td><input class="small-form" type="text" name="post[ingredients][][amount]"></td>
                <td><input class="small-form" type="text" name="post[ingredients][][measurement]"></td>
            </tr>
            <tr>
                <td><label for="third-ingredient">Third Ingredient</label></td>
                <td><input class="small-form" type="text" name="post[ingredients][][name]"></td>
                <td><input class="small-form" type="text" name="post[ingredients][][amount]"></td>
                <td><input class="small-form" type="text" name="post[ingredients][][measurement]"></td>
            </tr>
        </table>
    </div>

    <div class="wrapper">
    <h3>Instructions</h3><br>
        <h4><label for="step[one]">Step 1</label><br>
            <input class="large-form" type="text" name="post[step][][content]"><br><br>

        <label for="step[two]">Step 2</label><br>
            <input class="large-form" type="text" name="post[step][][content]"><br><br>

        <label for="step[three]">Step 3</label><br>
            <input class="large-form" type="text" name="post[step][][content]"><br><br>

        <label for="step[four]">Step 4</label><br>
            <input class="large-form" type="text" name="post[step][][content]"><br><br>

        <label for="step[five]">Step 5</label><br>
            <input class="large-form"  type="text" name="post[step][][content]"><br><br>

        <label for="step[six]">Step 6</label><br>
            <input class="large-form" type="text" name="post[step][][content]"><br><br>
        
    </div>

    <input class="custom-button" type="file" name="post[photo]">

    <input class="custom-button" type="submit" value="Submit!">
</form>