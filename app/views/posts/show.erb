
    <div class="wrapper">
        <h2><%= @post.title %></h2>
        <p><%= @post.content %></p>     
    </div>

    <div class="wrapper">
        <%ingredient_counter = 1%>
        <% @post.ingredients.each do |ingredient| %>
            <h4>Ingredient<%= counter  %></h4>
            <p><%=ingredient.name%> <%= ingredient.amount %> <%= ingredient.measurement_type%> </p>
            <% ingredient_counter += 1%>
        </div>
        <% end %>
    </div>

    <% step_counter = 1%>
    <% @post.steps.each do |step| %>
        <div class="wrapper">
            <h4>Step <%= step_counter  %></h4>
            <p><%=step.content%></p>
            <% step_counter += 1%>
        </div>
        <% end %>

    <div>
        <h6>Author: <%= @post.user.first_name %> <%=@post.user.last_name%></h6>
        <h6>Written On: <%=@post.created_at %></h6>
    </div>

<% if @post.user_id == session["user_id"] %>
   <a href="/posts/<%= @post.id %>/edit" class="custom-button">Edit</a>
<% end %>

