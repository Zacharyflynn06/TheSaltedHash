
<% if flash[:error] %>
    <div >
        <h4 class="error"><%= flash[:error] %></h4>
    </div>
<% end %>

<div class="wrapper">
    <h2>Log In</h2>

    <form method="POST" action="/login">
        <div>
            <h5><label for="username">User Name:</label></h5>
            <input class="small-form" type="text" name="username">
        </div>
        <div>
            <h5><label for="password">Password</label></h5>
            <input class="small-form" type="password" name="password"><br><br>
            <button type="submit" class="custom-button">Log In</button>
        </div>
    </form>
</div>