<br><br>

<h1><%= @user.first_name %> <%= @user.last_name %>'s Homepage!</h1>

<% #click here to upload a profile picture! %>


<h4>Here are your posts</h4><br>
<div class="post">
    <% @user_posts.each do |post|%>
    <div class="wrapper">
        <h3><a href="/posts/<%= post.id %>"> <%= post.title %></a></h3>
        <p><%= post.content %></p>
        <h6>Author: <%= post.user.first_name %> <%=post.user.last_name%></h6>
        <h6>Written On: <%=post.created_at %></h6>
    </div>
    <% end %>
</div>

<% if @user.id == session["user_id"] %>
   <a href="/users/<%= @user.id %>/edit" class="custom-button">Edit Profile</a>
<% end %>